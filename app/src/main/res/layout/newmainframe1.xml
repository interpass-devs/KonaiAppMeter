<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/getFrameLayoutSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 빈차 화면 -->
            <!-- 빈차화면 -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/emptylayouts_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/empty_bg_black">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_location_btn"/>
                        <TextView
                            android:id="@+id/textView5new"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:text="운행거리"
                            android:textColor="@color/white"
                            android:autoSizeTextType="uniform" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp">
                        <TextView
                            android:id="@+id/curemptydist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:autoSizeTextType="uniform"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@+id/curemptydist"
                            android:gravity="center_vertical"
                            android:text="km"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:paddingTop="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- 빈차요금 -->
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textView6new"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:autoSizeTextType="uniform"
                            android:gravity="right"
                            android:paddingTop="20dp"
                            android:paddingBottom="15dp"
                            android:text="0"
                            android:textColor="@color/yellow" />
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:layout_marginRight="30dp"
                            android:layout_toRightOf="@+id/textView6new"
                            android:text="원"
                            android:textColor="@color/yellow"
                            android:textSize="50sp"
                            android:paddingBottom="25dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <!-- 상세보기 버튼 -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="30dp">
                    <TextView
                        android:id="@+id/show_empty_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/layout_line_round_radius_dark"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text="상세보기"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 빈차 화면 end -->



            <!-- 빈차상세화면 -->
            <!-- emptylayouts 다시.. -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/emptylayouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background">
                <LinearLayout
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_backgroud_radius"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_location_btn"/>
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/malgun"
                            android:text="운행거리"
                            android:textColor="@color/white"
                            android:textSize="24sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ntv_daytotdist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:fontFamily="@font/malgunbd"
                            android:textSize="30sp"
                            android:text="0.00 Km"
                            android:textColor="@color/white"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_backgroud_radius"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_total_deal_btn"/>
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/malgun"
                            android:text="총거래"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ntv_daytotdrvcnt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:fontFamily="@font/malgunbd"
                            android:textSize="30sp"
                            android:text="0 회"
                            android:textColor="@color/white"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_backgroud_radius"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="50dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_total_income_btn"/>
                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/malgun"
                                android:text="총수입"
                                android:textColor="@color/white"
                                android:textSize="20sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:paddingLeft="20dp">
                            <TextView
                                android:id="@+id/hide_report"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/malgun"
                                android:text="거래집계"
                                android:textStyle="bold"
                                android:textColor="@color/dark_grey"
                                android:background="@drawable/yellow_gradi_btn"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/hide_empty_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/malgun"
                                android:text="돌아가기"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"
                                android:background="@drawable/layout_line_round_radius_dark_pink"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="2.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/resettfare"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center_vertical|right"
                            android:fontFamily="@font/malgun"
                            android:textSize="24sp"
                            android:text="금액마감"
                            android:textColor="#8C8991"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/ntv_daytotpay"
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center_vertical|right"
                            android:fontFamily="@font/malgunbd"
                            android:textSize="38sp"
                            android:text="0.00 원"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 빈차상세하면 end -->




            <!-- 주행화면 -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/drivelayouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/empty_bg_black">
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/iv_car_icon"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_gravity="left"
                            android:layout_height="match_parent"
                            android:src="@drawable/tyre"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:id="@+id/ntv_remainfare"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="2000"
                            android:autoSizeTextType="uniform"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp">
                        <com.konai.appmeter.driver.struct.CircleProgressBar
                            android:id="@+id/progressremain1"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center_vertical"
                            app:line_width="5dp"
                            app:progress_start_degree="270"
                            app:progress_background_color="#ffaaaaaa"
                            app:progress_end_color="#3C52CF"
                            app:progress_start_color="#3C52CF"
                            app:progress_stroke_cap="round"
                            app:progress_stroke_width="8dp"
                            app:progress_shader="sweep"
                            app:progress_style="solid_line"
                            app:progress_text_color="#3C52CF"/>
                        <ProgressBar
                            android:id="@+id/progressremain2"
                            android:layout_marginLeft="5dp"
                            android:max="40"
                            android:progress="0"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ntv_boardkm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/malgun"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            android:paddingTop="30dp"
                            android:paddingBottom="20dp"
                            android:text="0"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">
                    <!-- 할증 30 % -->
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/ntv_gpstext"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left"
                            android:paddingBottom="2dp"
                            android:layout_weight="0.0"
                            android:background="@drawable/radius_extra_button"
                            android:text="OBD"
                            android:autoSizeTextType="uniform"
                            android:textColor="#000000" />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/ntv_callfare"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="left|bottom"
                            android:autoSizeTextType="uniform"
                            android:text="+1000"
                            android:paddingLeft="30dp"
                            android:fontFamily="@font/malgunsl"/>
                        <Button
                            android:id="@+id/ntv_status"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="right|bottom"
                            android:autoSizeTextType="uniform"
                            android:text="+ 할증 30%"
                            android:textColor="#E91E63"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="30dp"
                            android:fontFamily="@font/malgunbd"
                            android:background="@color/black"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <!-- 주행요금 -->
                    <LinearLayout
                        android:id="@+id/nowfare_layout"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/ntv_nowfare"
                            android:layout_weight="4.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center|right"
                            android:text="13,800"
                            android:textColor="@color/yellow"
                            android:fontFamily="@font/malgunbd"
                            android:paddingTop="25dp"
                            android:paddingBottom="25dp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:text="원"
                            android:textColor="@color/yellow"
                            android:textSize="50sp"
                            android:fontFamily="@font/malgunsl"
                            android:layout_marginRight="30dp"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- 할증켜짐/ 시외꺼짐 버튼 -->
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">
                    <Button
                        android:id="@+id/nbtn_extra"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/layout_line_round_radius_dark"
                        android:gravity="center"
                        android:text="할증 꺼짐"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"/>
                    <Button
                        android:id="@+id/nbtn_suburb"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/layout_line_round_radius_dark"
                        android:gravity="center"
                        android:text="시외 꺼짐"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"/>
                    <Button
                        android:id="@+id/nbtn_complex"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/layout_line_round_radius_dark"
                        android:gravity="center"
                        android:text="복합 꺼짐"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 주행화면 end -->





            <!-- 결제화면 -->
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/paymentlayouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/empty_bg_grey"

                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <!-- 운행거리 -->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/layout_pay_distance"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView11"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:fontFamily="@font/malgun"
                        android:text="운행거리"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"/>
                    <TextView
                        android:id="@+id/ntv_resdistance"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:fontFamily="@font/malgunbd"
                        android:text="0 km"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"/>
                </LinearLayout>
                <!-- 운행요금 -->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/layout_pay_driving_payment"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:fontFamily="@font/malgun"
                        android:text="운행요금"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"/>
                    <TextView
                        android:id="@+id/ntv_respayment"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:fontFamily="@font/malgunbd"
                        android:text="0 원"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"/>
                </LinearLayout>
                <!-- 호출요금 -->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/layout_pay_call_payment"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView15"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:fontFamily="@font/malgun"
                        android:text="호출요금"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"/>
                    <TextView
                        android:id="@+id/ntv_rescallpay"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:fontFamily="@font/malgunbd"
                        android:text="0 원"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"/>
                </LinearLayout>
                <!-- 추가요금 -->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/layout_pay_add_payment"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView13"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
